<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive dvData">
            <h4 class="m-t-0 header-title"><b>Danh sách bệnh nhân</b></h4>
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Họ tên</th>
                        <th>Giới tính</th>
                        <th>Năm sinh</th>
                        <th>Địa chỉ</th>
                        <th>Hành động</th>
                    </tr>
                </thead>

                <tbody>
                    <% BenhNhan.forEach((item, index) => { %>
                    <% const {MaBN, HoTen, NamSinh, GioiTinh, DiaChi} = item %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= HoTen %></td>
                        <td>
                            <% if (GioiTinh == 1) { %>
                            Nữ
                            <% } else if (GioiTinh == 2) { %>
                            Nam
                            <% } else {%>
                            Khác
                            <% } %>
                        </td>
                        <td><%= NamSinh %></td>
                        <td><%= DiaChi %></td>
                        <td>
                            <a href="/benhnhan/sua/<%= MaBN %>" class="btn btn-icon waves-effect waves-light btn-warning" title="Sửa"> <i
                                    class="fa fa-wrench"></i></a>
                            &nbsp;
                            &nbsp;
                            <a onclick="" class="btn btn-icon waves-effect waves-light btn-danger" title="Xóa"> <i
                                    class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>